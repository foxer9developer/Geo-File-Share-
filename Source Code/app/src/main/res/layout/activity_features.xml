<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09c6df"
    android:fitsSystemWindows="true"
    style="@style/Widget.AppCompat.Button.Colored"
    tools:context=".Features">
    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/features_margin">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="@dimen/features_margin"
        android:layout_height="@dimen/features_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/prevBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/skip"
        app:rippleColor="@color/black_overlay"
        app:backgroundTint="#09c6df" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/prevBtn"
        android:src="@mipmap/next"
        app:rippleColor="@color/black_overlay"
        app:backgroundTint="#09c6df" />
</RelativeLayout>